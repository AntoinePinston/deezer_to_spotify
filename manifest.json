{
    "manifest_version": 3,
    "name": "deezerToSpotify",
    "description": "Convert deezer playlist to spotify",
    "version": "1.0",
    "action": {
        "default_popup": "popup/main.html",
        "default_icon": "icons/popup.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "webRequest"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["popup/popup.js", "scripts/request_deezer.js", "callback_spotify/callback.js"]
          
        }
    ]
    
}
